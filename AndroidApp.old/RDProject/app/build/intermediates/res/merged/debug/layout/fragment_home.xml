<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/img_start_recording"
            android:id="@+id/linearLayout">

            <Spinner
                android:id="@+id/known_words_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.8"
                android:background="@color/HeaderMenuBottom"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_start_recording"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/start_rec" />

        <ImageView
            android:id="@+id/img_add_new_word"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="0.2"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RelativeLayout>

</FrameLayout>